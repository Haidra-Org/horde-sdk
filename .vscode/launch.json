    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },        
        {
            "name": "PyTest",
            "type": "python",
            "request": "test",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "logToFile": true,
            "args": [
                "-v",
            ],
            "cwd": "${fileDirname}",
        },
    ]
}